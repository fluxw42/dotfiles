bind $mod+Shift+17 move container to workspace 8
bind $mod+Shift+18 move container to workspace 9
bind $mod+Shift+19 move container to workspace 10
bind $mod+Shift+20 move container to workspace 11
bind $mod+Shift+21 move container to workspace 12

# reload the configuration file or restart i3 inplace
bind $mod+Shift+54 reload
bind $mod+Shift+27 restart
# exit i3 (logs you out of your X session) (Key e = 26)
bind $mod+Shift+26 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bind 113 resize shrink width 10 px or 10 ppt
        bind 116 resize grow height 10 px or 10 ppt
        bind 111 resize shrink height 10 px or 10 ppt
        bind 114 resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bind 36 mode "default"
        bind 9 mode "default"
}

bind $mod+27 mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# 5 Workspaces on DP1, located left of VGA1
workspace 0 output DP1
workspace 1 output DP1
workspace 2 output DP1
workspace 3 output DP1
workspace 4 output DP1
workspace 5 output DP1

# 5 Workspaces on VGA1, located right of DP1
workspace 6 output HDMI2
workspace 7 output HDMI2
workspace 8 output HDMI2
workspace 9 output HDMI2
workspace 10 output HDMI2
workspace 11 output HDMI2
workspace 12 output HDMI2

for_window [class="Gcalctool" instance="gcalctool"] floating enable
for_window [class="Nautilus" instance="file_progress"] floating enable
for_window [class="Nemo" instance="file_progress"] floating enable
for_window [class="XCalc" instance="xcalc"] floating enable
for_window [class="^Spotify$"] floating enable
for_window [class="^Spotify Premium$"] floating enable

assign [title="cmus"] 12
assign [title="IntelliJ IDEA"] 2

# Startup apps
exec --no-startup-id numlockx on		# Enable numlock by default
exec --no-startup-id hsetroot -solid "#333333"	# Change the background color to a grayish color
exec --no-startup-id autoscreen			# Try to autoconfigure the screens
exec --no-startup-id nm-applet			# The network manager applet
exec --no-startup-id xautolock -time 5 -locker /home/jme/bin/lockscreen &

# Invert the screen when pressing the mail button (easier for the eyes in some cases)
bind 163 exec xcalib -invert -alter
bind 232 exec xbacklight -10 -time 100 -steps 10
bind 233 exec xbacklight +10 -time 100 -steps 10

bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec mute_toggle

bindsym $mod+Shift+b [class="^.*"] border toggle

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal (Key 'Return' = 36)
bind $mod+36 exec i3-sensible-terminal

# kill focused window (Key a = 24)
bind $mod+Shift+24 kill

# start dmenu (a program launcher). (Key 'd' has code '40')
bind $mod+40 exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Use the arrow keys to set focus a window:
bind $mod+113 focus left
bind $mod+116 focus down
bind $mod+111 focus up
bind $mod+114 focus right

# Use arrow keys to move focused window:
bind $mod+Shift+113 move left
bind $mod+Shift+116 move down
bind $mod+Shift+111 move up
bind $mod+Shift+114 move right

# split orientation using h and v, fullscreen with f
bind $mod+43 split h
bind $mod+55 split v
bind $mod+41 fullscreen

# change container layout (stacked, tabbed, toggle split)
bind $mod+39 layout stacking
bind $mod+25 layout tabbed
bind $mod+26 layout toggle split

# toggle tiling / floating and change focus to/from floating window using space
bind $mod+Shift+65 floating toggle
bind $mod+65 focus mode_toggle

# focus the parent container (a = 24)
bind $mod+24 focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace using the upper number row with keys 1-0 + ')' and '-'
bind $mod+49 workspace 0
bind $mod+10 workspace 1
bind $mod+11 workspace 2
bind $mod+12 workspace 3
bind $mod+13 workspace 4
bind $mod+14 workspace 5
bind $mod+15 workspace 6
bind $mod+16 workspace 7
bind $mod+17 workspace 8
bind $mod+18 workspace 9
bind $mod+19 workspace 10
bind $mod+20 workspace 11
bind $mod+21 workspace 12

# move focused container to workspace, using the same keycodes as the switch command
bind $mod+Shift+49 move container to workspace 0
bind $mod+Shift+10 move container to workspace 1
